<%= form_for(result) do |f| %>
  <% if result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :user %>
    <%= select_tag(:user_id, options_for_select(@users), :selected => :user_id)%>    
  </div>

  <div class="field">
    <%= f.label :event %>
    <%= select_tag(:event_id, options_for_select(@events), :selected => :event_id)%>    
  </div>


  <div class="field">
    <%= f.label :score %>
    <%= f.number_field :score %>
  </div>

  <div class="field">
    <%= f.label :win_loose_tie %>
    <%= f.number_field :win_loose_tie %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
