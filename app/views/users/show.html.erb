<p id="notice"><%= notice %></p>


<h1>Handicap Summary</h1>
<h2><%= @user.name  %></h2>

<table class="table-striped">
  <thead>
    <tr>
      <th>  Event  </th>
      <th>  Handicap  </th>
      <th>  Win%  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @events.each do |event| %>
      <tr>
        <td> <%= event.name %> </td>
        <td><%= number_with_precision(@handicap[event.id], :precision => 1) %></td>
        <td><%= number_with_precision(@winlooseavg[event.id], :precision => 2) %></td>

      </tr>
    <% end %>

  </tbody>
</table>


 <p><%= link_to "Show all "+@user.name+" Results", results_path, class: "btn btn-danger btn-lg btn-xlarge pull-left" %></p>
